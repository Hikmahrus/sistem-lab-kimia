<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Input User</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link rel="stylesheet" href="/public/css/inputuserStyle.css">
</head>
<body>
    
    <!-- Input Inventaris -->
    <div class="input_inventaris">
        <div class="back_btn">
            <a href="/"><i class="fa fa-arrow-left"></i>  </a>
        </div>
        <h1>Input User</h1>
        <span class="title-span">Gunakan form dibawah ini untuk menambah user baru</span>
        <form action="/insert/user" method="post">
            <div class="formMessage formMessage--error">
                <% if (message) { %>
                  <%= message %> 
                <% } %> 
              </div>
            <div class="txt_field">
                <input type="text" name="username" required>
                <span></span>
                <label for="name">Nama</label>
            </div>
            <div class="num_field">
                <input type="number" name="nis" required>
                <span></span>
                <label for="nis" >NIS</label>
            </div>
            <div class="pass_field">
                <input type="password" name="password" id="password" required>
                <span><i class="fas fa-eye" aria-hidden="true" id="eye" onclick="toogle()"></i></span>
                <label for="password">Password</label>
            </div>
            <div>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
          </form>
    </div>
<!-- Input Inventaris -->

    <!--Header-->
    <%- include('../header') %>
    <!--Header-->


    <script>
        var state = false;
        function toogle()
        {
            if(state)
            {
                document.getElementById("password").setAttribute("type","password");
                document.getElementById("eye").style.color="#adadad";
                state = false;
            } else {
                document.getElementById("password").setAttribute("type","text");
                document.getElementById("eye").style.color="#2691d9";
                state = true;
            }
        }
    </script>

</body>
</html>
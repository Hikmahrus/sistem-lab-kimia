  <body>
    <!--Login-->
    <div class="login">
      <div class="back_btn">
        <a href="/"><i class="fa fa-arrow-left"></i> </a>
      </div>
      <h1>Login</h1>
      <form action="/login" method="post" id="login">
        <div class="formMessage formMessage--error"><% if (messages.error) { %> <%= messages.error %> <% } %></div>
        <div class="txt_field">
          <input type="text" class="formInput" name="username" required />
          <span></span>
          <label>Nama Pengguna</label>
          <div class="errorMessage"></div>
        </div>
        <div class="pass_field">
          <input type="password" class="formInput" id="password" name="password" required />
          <span><i class="fas fa-eye" aria-hidden="true" id="eye" onclick="toogle()"></i></span>
          <label>Kata Sandi</label>
          <div class="errorMessage"></div>
        </div>
        <div>
          <input type="submit" value="Login" />
        </div>
      </form>
    </div>

    <!--Header-->
    <%- include('../header') %>
    <!--Header-->

    <script>
      var state = false;
      function toogle() {
        if (state) {
          document.getElementById("password").setAttribute("type", "password");
          document.getElementById("eye").style.color = "#adadad";
          state = false;
        } else {
          document.getElementById("password").setAttribute("type", "text");
          document.getElementById("eye").style.color = "#2691d9";
          state = true;
        }
      }

